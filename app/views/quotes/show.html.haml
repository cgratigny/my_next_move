.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
  = turbo_frame_tag @quote do
    %div.card.mt-4.quote
      = render @quote
    = link_to "Edit this quote", edit_quote_path(@quote), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    .inline-block.ml-2
      = button_to "Destroy this quote", quote_path(@quote), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to "Back to quotes", quotes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
