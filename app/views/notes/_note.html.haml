%div{:id => "#{dom_id note}"}
  - if action_name != "show"
    = link_to "Show this note", [note.notable, note], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to "Edit this note", [:edit, note.notable, note], class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
