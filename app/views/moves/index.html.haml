.flex
  .grow
    = render(Primer::Beta::Heading.new(tag: :h1)) { "Moves (#{@moves.count})" }
  .new
    = link_to [:new, :move] do
      = render(Primer::Beta::Button.new(scheme: :primary, type: :button)) { "New" }

%turbo-frame#moves{ data: { target: :_top } }
  #moves.container.m-auto.grid.grid-cols-1
    - @moves.each do |move|
      .p-6.m-2.bg-white.border.border-gray-200.rounded-lg.shadow.dark:bg-gray-800.dark:border-gray-700.mb-4
        = render move
